<Page
    x:Class="SignApp.Sign.BindDevicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MainProject.Sign"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Image/bg_content.png"/>
        </Grid.Background>
        <StackPanel>
            <Image Source="/Image/logo.png" Stretch="None" />
            <StackPanel>
                <TextBlock Foreground="Black" Margin="12,0" FontSize="25" Text="请输入姓名绑定用户:"/>
                <TextBox x:Name="textBox" Margin="12" Height="45"/>
            </StackPanel>
        </StackPanel>
        <Button Margin="48" Content="确定" Height="50" FontSize="28" Background="#cd1821" BorderBrush="#cd1821" Foreground="White" HorizontalAlignment="Stretch" Visibility="Visible"/>

        
    </Grid>
</Page>
